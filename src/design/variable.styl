 *  私有颜色写到private.styl
 */

// 主色区域
$color-main = #73C200 // 主颜色
$color-sub = #111111 // 副颜色
$color-shade-main = linear-gradient(90deg, #FF7C60 0%, #F94C5F 100%) // 主渐变色
$color-shade-sub = linear-gradient(131deg, #FFC416 0%, #FE9E10 100%) // 副渐变色

// 辅助色区域
$color-background = #F7F7F7 // 背景色
$color-line = #E6E6E6 // 线条颜色
$color-money = #FF8300 // 金额颜色
$color-tag = #FFE500 // 标签颜色
$color-white = #ffffff

// 文字色区域
$color-text-main = #111111 // 主文字色
$color-text-sub = #808080 // 副文字色
$color-text-assist = #B7B7B7 // 辅助文字颜色

// 字体
$font-family-din = 'DIN Alternate'
