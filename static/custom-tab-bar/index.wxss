.tab-bar {
  position: fixed;
  bottom: -1000px;
  left: 0;
  right: 0;
  height: 0;
  display: none;
  opacity: 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

